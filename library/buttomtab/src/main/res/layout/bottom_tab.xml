<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_tab_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_tab_height"
    android:background="?selectableItemBackgroundBorderless"
    android:minWidth="@dimen/bottom_tab_min_width"
    android:orientation="vertical"
    android:paddingBottom="@dimen/bottom_tab_padding_bottom"
    android:paddingLeft="@dimen/bottom_tab_padding_left"
    android:paddingRight="@dimen/bottom_tab_padding_right"
    android:paddingTop="@dimen/bottom_tab_padding_top_inactive">

    <ImageView
        android:id="@+id/bottom_tab_item_icon"
        android:layout_width="@dimen/bottom_tab_icon"
        android:layout_height="@dimen/bottom_tab_icon"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <TextView
        android:id="@+id/bottom_tab_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:lines="1"
        android:textSize="@dimen/bottom_tab_text_size_inactive" />

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="LOGIN" />

        <EditText style="@style/Edit.User" />

        <EditText style="@style/Edit.Password" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/tv_forgot"
                style="@style/ActionTextView.InRelativeLayout.Left"
                android:text="@string/txt_action_string_forgot" />

            <Button
                style="@style/ButtonDoneStyle"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:text="@string/txt_action_string_login" />

            <TextView
                android:id="@id/tv_register"
                style="@style/ActionTextView.InRelativeLayout.Right"
                android:text="@string/txt_action_string_register" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
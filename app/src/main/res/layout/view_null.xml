        android:layout_marginTop="10dp"
        android:background="@color/colorNull" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:background="@color/colorNull" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
